---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
  labels:
    app: {{name}}
{{#if hasAnyAnnotations}}
  annotations:
{{#each annotations}}
{{@key}}: {{this}}
{{/each}}
{{/if}}
spec:
  minReadySeconds: 60
  replicas: 2
  selector:
    matchLabels:
      app: {{name}}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: {{name}}
{{#if hasAnyAnnotations}}
      annotations:
{{#each annotations}}
{{@key}}: {{this}}
{{/each}}
{{/if}}
    spec:
{{#if withPrivateRegistry}}
      imagePullSecrets:
      - name: image-pull-secret
{{/if}}
      containers:
      - name: {{name}}
        image: {{containerImage}}
        imagePullPolicy: {{imagePullPolicy}}
{{#if entrypoint}}
        command:
          - {{entrypoint}}
{{/if}}
{{#if hasArgs}}
        args:
{{#each args}}
        - {{this}}
{{/each}}
{{/if}}
{{#if hasPorts}}
        ports:
{{#each ports}}
        - name: {{name}}
          containerPort: {{internalPort}}
{{/each}}
{{/if}}
        env:
        - name: ORLEANS_SERVICE_ID
        valueFrom:
            fieldRef:
            fieldPath: metadata.labels['orleans/serviceId']
        - name: ORLEANS_CLUSTER_ID
        valueFrom:
            fieldRef:
            fieldPath: metadata.labels['orleans/clusterId']
        - name: POD_NAMESPACE
        valueFrom:
            fieldRef:
            fieldPath: metadata.namespace
        - name: POD_NAME
        valueFrom:
            fieldRef:
            fieldPath: metadata.name
        - name: POD_IP
        valueFrom:
            fieldRef:
            fieldPath: status.podIP
        - name: DOTNET_SHUTDOWNTIMEOUTSECONDS
        value: "120"
{{#if hasAnyEnv}}
        envFrom:
        - configMapRef:
            name: {{name}}-env
{{/if}}
{{#if hasAnySecrets}}
        - secretRef:
            name: {{name}}-secrets
{{/if}}
      terminationGracePeriodSeconds: 180